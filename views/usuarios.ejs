  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/img/iconosanrafa.png" /> <!-- icono -->
  <style>
    /* Tama√±o base un poco m√°s peque√±o */
    body {
      background-color: #E8F4FF !important;
    }

    /* Navbar */
    .navbar {
      background-color: #ecf6ff !important;
      border-bottom: 1px solid #CFE6FF !important;
    }

    .navbar .nav-link {
      color: #0A3D62 !important;
    }

    .navbar .nav-link:hover {
      color: #562585 !important;
    }

    /* Footer */
    footer {
      background-color: #D8ECFF !important;
    }

    /* Card estilo home */
    .table-card {
      background-color: #FFFFFF !important;
      border: 1px solid #CFE6FF !important;
      box-shadow: 0 0.1rem 0.35rem rgba(15, 23, 42, 0.08) !important;
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .table-card:hover {
      transform: scale(1.03);
      border: 2px solid #a3eef3 !important;
      box-shadow: 30px 10px 20px rgba(59, 145, 148, 0.5) !important;
    }

    /* Botones violetas */
    .btn-primary,
    .btn-compact,
    .btn-entrar {
      background-color: #562585 !important;
      border-color: #562585 !important;
      color: #fff !important;
    }

    /* Botones celestes */
    .btn-celeste,
    .btn-info {
      background-color: #5dc2bd !important;
      border-color: #5dc2bd !important;
      color: #fff !important;
    }

    /* Encabezado de tabla */
    .table thead th {
      background-color: #ecf6ff !important;
      color: #0A3D62 !important;
    }

    /* Hover tabla */
    .table tbody tr:hover {

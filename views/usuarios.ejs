    }

    /* Inputs estilo home */
    .form-control,
    .form-select {
      border: 1px solid #CFE6FF !important;
      background-color: #ffffff !important;
    }

    /* Encabezados internos */
    header.page-header h1,
    header.page-header p {
      color: #0A3D62 !important;
    }

    body {
      padding: 0;
      font-size: 0.9rem;
    }

    .page-wrapper {
      max-width: 1400px;
      margin: 0 auto;
    }

    header.page-header {
      margin-bottom: 1rem;
    }

    header.page-header h1 {
      font-size: 1.15rem;
    }

    header.page-header p {
      font-size: 0.82rem;
    }

    .btn-compact {
      padding: 0.3rem 0.7rem;
      font-size: 0.8rem;
      line-height: 1.2;
    }

    .toolbar .form-label {
      font-size: 0.8rem;
      margin-bottom: 0.15rem;
    }

    .toolbar .form-control {
      min-width: 200px;
      padding: 0.25rem 0.5rem;
      font-size: 0.85rem;
      height: calc(1.5em + 0.5rem + 2px);
    }

    .table thead th {
      white-space: nowrap;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: .03em;
      background-color: #f8f9fa;
    }

    .table {
      --bs-table-cell-padding-y: 0.4rem;
      --bs-table-cell-padding-x: 0.5rem;
    }

    .table td {
      vertical-align: middle;
      font-size: 0.85rem;
    }

    .table-card {
      border-radius: 0.375rem;
      box-shadow: 0 0.1rem 0.35rem rgba(15, 23, 42, 0.05);
      border: 1px solid #dee2e6;
      overflow: hidden;
    }

    .table tbody tr:hover {
      background-color: #f9fafb;
    }

    .col-acciones {
      text-align: center;
      white-space: nowrap;
      width: 160px;
    }

    .col-acciones .btn {
      margin-bottom: 0.1rem;
    }

    .toast-container {
      z-index: 1080;
    }

    body.dark-mode {
      background-color: #1e1e1e !important;
      color: #e6e6e6 !important;
    }

    main.dark-mode-main {
      background-color: #2a2a2a !important;
      color: #e6e6e6 !important;

      h1 {
        color: #f1f1f1 !important;
      }

      p {
        color: #f1f1f1 !important;
      }
    }

    /* letras */
    .dark-mode .card {
      background-color: #2a2a2a !important;
      color: #ffffff !important;
      border: 1px solid #444 !important;
    }

    .dark-mode .navbar,
    xxxxxx .dark-mode footer {
      background-color: #2a2a2a !important;
      color: #e6e6e6 !important;

      h1 {
        color: #f1f1f1 !important;
      }

      p {
        color: #f1f1f1 !important;
      }
    }

    .dark-mode a,
    .dark-mode .nav-link {
      color: #ffffff !important;
    }

    .dark-mode footer {
      background-color: #2a2a2a !important;
      color: #e6e6e6 !important;
    }
  </style>
</head>

<body class="bg-white d-flex flex-column min-vh-100">

  <!-- NAVBAR SUPERIOR -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container">

      <!-- Logo + Nombre -->
      <a class="navbar-brand d-flex align-items-center gap-2" href="/">
        <img src="/img/logosanRafa.png" alt="USTA" style="height:40px; width:auto;" class="rounded">
      </a>

      <!-- Bot√≥n colapsable m√≥vil -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Contenido navbar -->
      <div class="collapse navbar-collapse" id="mainNavbar">

        <!-- √çtems del men√∫ -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/equipos">Equipos</a></li>
          <li class="nav-item"><a class="nav-link" href="/ubicaciones">Ubicaciones</a></li>
          <li class="nav-item"><a class="nav-link" href="/responsables-custodios">Responsables</a></li>
          <li class="nav-item"><a class="nav-link" href="/personas-mantenimiento">Personas</a></li>
          <li class="nav-item"><a class="nav-link" href="/cargos">Cargos</a></li>
          <li class="nav-item"><a class="nav-link" href="/mantenimientos">Mantenimientos</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/usuarios">Usuarios</a></li>
        </ul>

        <!-- Usuario + Salir -->
        <% if (currentUser) { %>
          <span class="navbar-text me-3 text-muted small">
            Usuario: <strong>
              <%= currentUser.username %>
            </strong> |
            Rol: <strong>
              <%= currentUser.role %>
            </strong>
          </span>

          <button id="toggleDark" class="btn btn-sm" style="border: none;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon"
              viewBox="0 0 16 16">
              <path
                d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
            </svg>
          </button>

          <form method="post" action="/logout" class="d-inline m-0">
            <button class="btn btn-outline-danger btn-sm">Salir</button>
          </form>
          <% } %>

      </div>
    </div>
  </nav>

  <!-- CONTENIDO PRINCIPAL -->
  <main class="flex-grow-1">
    <div class="container-fluid py-3 px-4">
      <div class="page-wrapper">

        <!-- Header local -->
        <header class="page-header d-flex justify-content-between align-items-center">
          <div>
            <h1 class="h4 mb-0">Gesti√≥n de usuarios</h1>
            <p class="text-muted mb-0">
              Administraci√≥n de cuentas de acceso al m√≥dulo: creaci√≥n, edici√≥n de roles y control b√°sico.
            </p>
          </div>
          <div>
            <button class="btn btn-primary btn-compact" id="btnNuevo">
              ‚ûï Nuevo usuario
            </button>
          </div>
        </header>

        <!-- Filtro de b√∫squeda -->
        <div class="card mb-3">
          <div class="card-body toolbar">
            <div class="row g-2 align-items-end">
              <div class="col-sm-8 col-md-6 col-lg-4">
                <label class="form-label">Buscar</label>
                <input type="text" class="form-control" id="search" placeholder="Usuario o rol...">
              </div>
              <div class="col-sm-4 col-md-3 col-lg-2 d-flex gap-2">
                <button id="btnLimpiarFiltro" class="btn btn-outline-secondary btn-compact w-100">
                  Limpiar filtro
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Tabla de usuarios -->
        <div class="card table-card">
          <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle mb-0" id="tablaUsuarios">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Usuario</th>
                  <th>Rol</th>
                  <th>Creado</th>
                  <th>Actualizado</th>
                  <th class="col-acciones">Acciones</th>
                </tr>
              </thead>
              <tbody id="tbodyUsuarios">
                <% usuarios.forEach(u=> { %>
                  <tr data-id="<%= u.id %>">
                    <td>
                      <%= u.id %>
                    </td>
                    <td>
                      <%= u.username %>
                    </td>
                    <td>
                      <span class="badge bg-<%= u.role === 'admin' ? 'danger' : 'secondary' %>">
                        <%= u.role %>
                      </span>
                    </td>
                    <td>
                      <%= u.createdAt ? new Date(u.createdAt).toLocaleString('es-CO',{ timeZone:'America/Bogota' }) : ''
                        %>
                    </td>
                    <td>
                      <%= u.updatedAt ? new Date(u.updatedAt).toLocaleString('es-CO',{ timeZone:'America/Bogota' }) : ''
                        %>
                    </td>
                    <td class="col-acciones">
                      <button class="btn btn-sm btn-outline-primary btn-compact btn-edit">Editar</button>
                      <button class="btn btn-sm btn-outline-danger btn-compact btn-delete">Eliminar</button>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Modal crear/editar -->
        <div class="modal fade" id="modalUsuario" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <form id="formUsuario">
                <div class="modal-header">
                  <h5 class="modal-title" id="modalTitulo">Nuevo usuario</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                  <input type="hidden" id="usuarioId">

                  <div class="mb-3">
                    <label class="form-label">Usuario</label>
                    <input type="text" class="form-control" id="username" required>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Contrase√±a</label>
                    <input type="password" class="form-control" id="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
                    <small class="text-muted" id="helpPassword">
                      Para nuevo usuario es obligatoria. Al editar, deje en blanco si no desea cambiarla.
                    </small>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Rol</label>
                    <select class="form-select" id="role" required>
                      <option value="user">user</option>
                      <option value="admin">admin</option>
                    </select>
                  </div>

                  <div class="alert alert-danger d-none" id="errorBox"></div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary btn-compact" data-bs-dismiss="modal">Cancelar</button>
                  <button type="submit" class="btn btn-primary btn-compact" id="btnGuardar">Guardar</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Toast bootstrap b√°sico -->
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
          <div id="mainToast" class="toast align-items-center text-bg-primary border-0" role="alert">
            <div class="d-flex">
              <div class="toast-body" id="toastBody">Acci√≥n realizada</div>
              <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
          </div>
        </div>

      </div><!-- /.page-wrapper -->
    </div><!-- /.container-fluid -->
  </main>

  <!-- FOOTER "FIJO" ABAJO -->
  <footer class="mt-auto py-2 border-top bg-light text-center text-body-secondary small">
    ¬© <%= new Date().getFullYear() %> USTA ‚Äì M√≥dulo de gesti√≥n de inventario y registro de mantenimientos de equipos
      inform√°ticos HSRT
  </footer>

  <!-- CURRENT_USER_ID nos permite saber desde el JS qui√©n es el usuario actual -->
  <script>
    window.CURRENT_USER_ID = "<%- JSON.stringify(currentUser ? currentUser.id : null) %>";

    document.addEventListener('DOMContentLoaded', () => {
      const search = document.getElementById('search');
      const btnLimpiar = document.getElementById('btnLimpiarFiltro');

      if (btnLimpiar && search) {
        btnLimpiar.addEventListener('click', () => {
          search.value = '';
          // Disparamos un evento input para que el JS que filtra se ejecute de nuevo
          const ev = new Event('input', { bubbles: true });
          search.dispatchEvent(ev);
        });
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/usuarios.js"></script>

  <script>
    const toggle = document.getElementById("toggleDark");
    const main = document.querySelector("main");

    toggle.addEventListener("click", () => {
      document.body.classList.toggle("dark-mode");
      main.classList.toggle("dark-mode-main");

      toggle.textContent =
        document.body.classList.contains("dark-mode")
          ? "‚òÄÔ∏è"
          : "üåô";
    });
  </script>

</body>

</html>
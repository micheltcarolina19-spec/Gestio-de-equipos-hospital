<!doctype html>
<html lang="es" data-bs-theme="light">

<head>
  <meta charset="utf-8" />
  <title>Equipos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/img/iconosanrafa.png" /> <!-- icono -->

  <style>
    /* Fondo general celeste claro */
    body {
      background-color: #E8F4FF !important;
    }

    /* Nav igual que home */
    .navbar {
      background-color: #ecf6ff !important;
    }

    .navbar .nav-link {
      color: #0A3D62 !important;
    }

    .navbar .nav-link:hover {
      color: #562585 !important;
    }

    /* Footer igual que home */
    footer {
      background-color: #D8ECFF !important;
    }

    /* Cards estilo home */
    .table-card {
      background-color: #FFFFFF !important;
      border: 1px solid #CFE6FF !important;
      box-shadow: 0 0.1rem 0.35rem rgba(15, 23, 42, 0.08) !important;
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    /* Hover tipo home */
    .table-card:hover {
      transform: scale(1.03);
      border: 2px solid #a3eef3 !important;
      box-shadow: 30px 10px 20px rgba(59, 145, 148, 0.5) !important;
    }

    /* Bot√≥n "Nuevo" y otros botones violetas */
    .btn-primary,
    .btn-compact,
    .btn-entrar {
      background-color: #562585 !important;
      border-color: #562585 !important;
      color: #fff !important;
    }

    /* Bot√≥n celeste (como home) */
    .btn-celeste,
    .btn-info {
      background-color: #5dc2bd !important;
      border-color: #5dc2bd !important;
      color: #fff !important;
    }

    /* Encabezado de tabla color suave */
    .table thead th {
      background-color: #ecf6ff !important;
      color: #0A3D62 !important;
    }

    /* Hover tabla igual home */
    .table tbody tr:hover {
      background-color: #f0f8ff !important;
    }

    /* Inputs y selects estilo home */
    .form-control,
    .form-select {
      border: 1px solid #CFE6FF !important;
      background-color: #ffffff !important;
    }

    /* Header interno */
    header.page-header h1,
    header.page-header p {
      color: #0A3D62 !important;
    }

    body.dark-mode {
      background-color: #1e1e1e !important;
      color: #e6e6e6 !important;
    }

    main.dark-mode-main {
      background-color: #2a2a2a !important;
      color: #e6e6e6 !important;

      h1 {
        color: #f1f1f1 !important;
      }

      p {
        color: #f1f1f1 !important;
      }
    }

    /* letras */
    .dark-mode .card {
      background-color: #2a2a2a !important;
      color: #ffffff !important;
      border: 1px solid #444 !important;
    }

    .dark-mode .navbar,
    xxxxxx .dark-mode footer {
      background-color: #2a2a2a !important;
      color: #e6e6e6 !important;

      h1 {
        color: #f1f1f1 !important;
      }

      p {
        color: #f1f1f1 !important;
      }
    }

    .dark-mode a,
    .dark-mode .nav-link {
      color: #ffffff !important;
    }

    .dark-mode footer {
      background-color: #2a2a2a !important;
      color: #e6e6e6 !important;
    }
  </style>

</head>

<body class="bg-white d-flex flex-column min-vh-100">
  <!-- NAVBAR SUPERIOR -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container">
      <!-- Logo + Nombre -->
      <a class="navbar-brand d-flex align-items-center gap-2" href="/">
        <img src="/img/logosanRafa.png" alt="USTA" style="height:40px; width:auto;" class="rounded">
      </a>

      <!-- Bot√≥n colapsable m√≥vil -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Contenido navbar -->
      <div class="collapse navbar-collapse" id="mainNavbar">
        <!-- √çtems del men√∫ -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/equipos">Equipos</a>
          </li>
          <li class="nav-item"><a class="nav-link" href="/ubicaciones">Ubicaciones</a></li>
          <li class="nav-item"><a class="nav-link" href="/responsables-custodios">Responsables</a></li>
          <li class="nav-item"><a class="nav-link" href="/personas-mantenimiento">Personas</a></li>
          <li class="nav-item"><a class="nav-link" href="/cargos">Cargos</a></li>
          <li class="nav-item"><a class="nav-link" href="/mantenimientos">Mantenimientos</a></li>
          <li class="nav-item"><a class="nav-link" href="/usuarios">Usuarios</a></li>
          <!----Wendy ---------------------------------------------------------------------->
          <% if (currentUser && currentUser.role==='admin' ) { %>
            <li class="nav-item">
              <a class="nav-link" href="/usuarios">Usuarios</a>
            </li>
            <% } %>
              <li class="nav-item"><a class="nav-link " href="/mi-perfil">Mi perfil</a></li>
              <!------------------------------------------------------------------------------------->
        </ul>

        <!-- Usuario + Salir -->
        <% if (currentUser) { %>
          <span class="navbar-text me-3 text-muted small">
            Usuario: <strong>
              <%= currentUser.username %>
            </strong> |
            Rol: <strong>
              <%= currentUser.role %>
            </strong>
          </span>

          <button id="toggleDark" class="btn btn-sm" style="border: none;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon"
              viewBox="0 0 16 16">
              <path
                d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
            </svg>
          </button>

          <form method="post" action="/logout" class="d-inline m-0">
            <button class="btn btn-outline-danger btn-sm">Salir</button>
          </form>
          <% } %>
      </div>
    </div>
  </nav>

  <!-- CONTENIDO PRINCIPAL -->
  <main class="flex-grow-1">
    <div class="container-fluid py-3 px-4">
      <div class="page-wrapper">

        <!-- Header local (t√≠tulo + texto funcionalidad + bot√≥n Nuevo) -->
        <header class="page-header d-flex justify-content-between align-items-center">
          <div>
            <h1 class="h4 m-0">Equipos</h1>
            <p class="text-muted mb-0">
              Gesti√≥n del inventario de equipos inform√°ticos: registro,
              actualizaci√≥n y seguimiento de estado.
            </p>
          </div>

          <!----------------Wendy--------------------------------->
          <div>
            <% if (currentUser && currentUser.role==='admin' ) { %>
              <button id="btnNuevo" class="btn btn-primary btn-compact"> ‚ûï Nuevo equipo</button>
              <% } %>
          </div>
          <!--------------------------------------------------------------->
        </header>

        <!-- Filtros -------------------------------------------------------->
        <div class="card mb-3">
          <div class="card-body toolbar row g-2 align-items-end">
            <div class="col-sm-6 col-lg-3">
              <label class="form-label">B√∫squeda</label>
              <input id="q" class="form-control" placeholder="C√≥digo, serial, marca, modelo">
            </div>

            <div class="col-sm-6 col-lg-2">
              <label class="form-label">Estado</label>
              <select id="fEstado" class="form-select"></select>
            </div>

            <div class="col-sm-6 col-lg-2">
              <label class="form-label">Tipo</label>
              <select id="fTipo" class="form-select"></select>
            </div>

            <div class="col-sm-6 col-lg-2">
              <label class="form-label">Ubicaci√≥n</label>
              <select id="fUbic" class="form-select"></select>
            </div>

            <!-- Responsable un poco m√°s angosto -->
            <div class="col-sm-6 col-lg-1">
              <label class="form-label">Responsable</label>
              <select id="fResp" class="form-select"></select>
            </div>

            <!-- Botones Filtrar / Limpiar, un poco m√°s grandes -->
            <div class="col-sm-6 col-lg-2 d-flex justify-content-end gap-2 mt-2 mt-lg-0">
              <button id="btnLimpiar" class="btn btn-outline-secondary btn-filter">
                Limpiar
              </button>
              <button id="btnFiltrar" class="btn btn-dark btn-filter">
                Filtrar
              </button>
            </div>
          </div>
        </div>

        <!-- Tabla dentro de card sutil -->
        <div class="card table-card">
          <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>#</th>
                  <th>C√≥digo</th>
                  <th>Serial</th>
                  <th>Marca</th>
                  <th>Modelo</th>
                  <th>Tipo</th>
                  <th>Estado</th>
                  <th>Ubicaci√≥n</th>
                  <th>Responsable</th>
                  <th>Creado</th>
                  <th>Actualizado</th>
                  <th class="col-acciones">Acciones</th>
                </tr>
              </thead>
              <tbody id="tbody">
                <% if (equipos && equipos.length) { %>
                  <% equipos.forEach(e=> { %>
                    <tr>
                      <td>
                        <%= e.id %>
                      </td>
                      <td class="fw-semibold">
                        <%= e.codigo_inventario %>
                      </td>
                      <td>
                        <%= e.serial || '' %>
                      </td>
                      <td>
                        <%= e.marca || '' %>
                      </td>
                      <td>
                        <%= e.modelo || '' %>
                      </td>

                      <!-- TIPO SIN COLORES -->
                      <td class="text-uppercase">
                        <%= e.tipo_equipo %>
                      </td>

                      <!-- ESTADO SIN BADGE NI COLORES wendy ------------------------->
                      <td>
                        <% const est=String(e.estado || '' ); %>
                          <%= est.replaceAll('_',' ') %>
                      </td>

                      <td><%= e.Ubicacion ? e.Ubicacion.identificacion : '' %></td>
                      <td>
                        <%= e.ResponsableCustodio
                              ? (e.ResponsableCustodio.id_area + ' ‚Äî ' + e.ResponsableCustodio.nombre_area)
                              : '' %>
                      </td>
                      <td>
                        <%= e.createdAt
                              ? new Date(e.createdAt)
                                  .toLocaleString('es-CO',{timeZone:'America/Bogota'}) : '' %>
                      </td>
                      <td>
                        <%= e.updatedAt ? new Date(e.updatedAt) .toLocaleString('es-CO',{timeZone:'America/Bogota'})
                          : '' %>
                      </td>
                      <td class="col-acciones">
                        <a class="btn btn-info btn-compact me-1" href="/mantenimientos?equipoId=<%= e.id %>">
                          Ver Mtto
                        </a>

                        <% if (currentUser.role ==='administrativo' || currentUser.role === 'admin' ) { %>
                          <button class="btn btn-warning btn-compact me-1" data-act="edit" data-id="<%= e.id %>">
                            Editar
                          </button>
                          <% } %>

                          <% if (currentUser.role === 'admin') { %>
                            <button class="btn btn-danger btn-compact" data-act="del" data-id="<%= e.id %>">
                              Eliminar
                            </button>
                            <% } %>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="12" class="text-center text-muted py-4">
                            Sin registros
                          </td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!--------------------------------------------------------------------------------->

        <!-- Modal -->
        <div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <form class="modal-content" id="form">
              <div class="modal-header">
                <h5 class="modal-title" id="title">Nuevo equipo</h5>
                <button class="btn-close" data-bs-dismiss="modal" type="button"></button>
              </div>
              <div class="modal-body">
                <input type="hidden" id="id">
                <div class="row g-3">
                  <div class="col-md-4">
                    <label class="form-label">C√≥digo inventario</label>
                    <input id="codigo" class="form-control" required>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Serial</label>
                    <input id="serial" class="form-control">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Marca</label>
                    <input id="marca" class="form-control">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Modelo</label>
                    <input id="modelo" class="form-control">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Tipo</label>
                    <select id="tipo" class="form-select" required></select>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Estado</label>
                    <select id="estado" class="form-select" required></select>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Ubicaci√≥n</label>
                    <select id="ubicacionId" class="form-select" required></select>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Responsable</label>
                    <select id="responsableId" class="form-select" required></select>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button class="btn btn-secondary btn-compact" data-bs-dismiss="modal" type="button">
                  Cancelar
                </button>
                <button class="btn btn-primary btn-compact" type="submit">
                  Guardar
                </button>
              </div>
            </form>
          </div>
        </div>

        <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastContainer"></div>
      </div><!-- /.page-wrapper -->
    </div><!-- /.container-fluid -->
  </main>

  <!-- FOOTER "FIJO" ABAJO -->
  <footer class="mt-auto py-2 border-top bg-light text-center text-body-secondary small">
    ¬© <%= new Date().getFullYear() %> USTA ‚Äì M√≥dulo de gesti√≥n de inventario y
      registro de mantenimientos de equipos inform√°ticos HSRT
  </footer>

  <!-------------------------wendy -------------- -->
  <script>
    window.CURRENT_USER_ROLE = "<%- currentUser ? currentUser.role : '' %>";
  </script>
  <!------------------------------------------------------->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/equipos.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const toggle = document.getElementById("toggleDark");
    const main = document.querySelector("main");

    toggle.addEventListener("click", () => {
      document.body.classList.toggle("dark-mode");
      main.classList.toggle("dark-mode-main");

      toggle.textContent =
        document.body.classList.contains("dark-mode")
          ? "‚òÄÔ∏è"
          : "üåô";
    });
  </script>

</body>

</html>
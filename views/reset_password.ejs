<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Restablecer contraseña | Inventario & Mantenimientos HSRT</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/img/iconosanrafa.png" /> <!-- icono -->

  <style>  
  .btn-entrar {
      background-color: #562585;
      color: white;
      font-weight: bold;
      border-radius: 8px;
      transition: background-color 0.3s ease;
    }

  </style>
</head>
<body class="bg-light d-flex align-items-center" style="min-height:100vh;">

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-8 col-md-5 col-lg-4">

        <div class="text-center mb-3">
          <img src="/img/logosanRafa.png" alt="Logo" style="max-width: 200px;">
        </div>

        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h1 class="h5 mb-3 text-center fw-bold">Restablecer contraseña</h1>

            <% if (error) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>

            <% if (!error && token) { %>
              <form method="post" action="/reset-password">
                <input type="hidden" name="token" value="<%= token %>">

                <div class="mb-3">
                  <label class="form-label fw-semibold">Nueva contraseña</label>
                  <input type="password" name="password" class="form-control" required>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-semibold">Confirmar contraseña</label>
                  <input type="password" name="password2" class="form-control" required>
                </div>

                <button class="btn btn-entrar w-100 mt-2">
                  Actualizar contraseña
                </button>
              </form>
            <% } %>

            <p class="text-center mt-3 mb-0">
              <a href="/login" class="small" style="color: #562585;">Volver al login</a>
            </p>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>